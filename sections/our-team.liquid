{{ 'section-our-team.css' | asset_url | stylesheet_tag }}
<div class="our-team">
    <div class="our-team-wrapper">
        <div class="our-team-top">
            <div class="our-team-image medium-half small-half">
                <div class="our-team-image-wrapper">
                    <div class="our-team-main-image">
                        <img
                        srcset="{{ section.settings.main_image | img_url: 'master' }} {{ section.settings.main_image.width }}w"
                        sizes=""
                        src="{{ section.settings.main_image | img_url: '600x' }}"
                        loading="lazy"
                        alt="{{ section.settings.main_image.alt | escape }}"
                        width="{{ section.settings.main_image.width }}"
                        height="{{ section.settings.main_image.width | divided_by: section.settings.main_image.aspect_ratio }}">
                    </div>
                    <div class="our-team-top-image absolute-image">
                        <img src="{{ section.settings.image1 | img_url: '209x' }}" alt="{{ section.settings.image1.alt | escape }}">
                    </div>
                    <div class="our-team-middle-image absolute-image">
                        <img src="{{ section.settings.image2 | img_url: '172x' }}" alt="{{ section.settings.image2.alt | escape }}">
                    </div>
                    <div class="our-team-bottom-image absolute-image">
                        <img src="{{ section.settings.image3 | img_url: '172x' }}" alt="{{ section.settings.image3.alt | escape }}">
                    </div>
                </div>
            </div>
            <div class="our-team-content medium-half small-half">
                <div class="our-team-content-wrapper">
                    <h2 class="h1 our-team-heading">{{ section.settings.heading1 }}</h2>
                    <h3 class="h3 our-team-subheading">{{ section.settings.sub_heading }}</h3>
                    <div class="our-team-text">
                        <p>{{ section.settings.text1 }}</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="our-team-bottom">
            <div class="our-team-bottom-wrapper">
                <h2 class="h1 our-team-heading">{{ section.settings.heading2 }}</h2>
                <div class="our-team-text">
                    <p>{{ section.settings.text2 }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% schema %}
{
    "name": "Our team",
    "tag": "section",
    "settings": [
        {
            "type": "header",
            "content": "Top"
        },
        {
            "type": "image_picker",
            "id": "main_image",
            "label": "Main image"
        },
        {
            "type": "image_picker",
            "id": "image1",
            "label": "Image 1"
        },
        {
            "type": "image_picker",
            "id": "image2",
            "label": "Image 2"
        },
        {
            "type": "image_picker",
            "id": "image3",
            "label": "Image 3"
        },
        {
            "type": "text",
            "id": "heading1",
            "label": "Heading 1",
            "default": "We love our team"
        },
        {
            "type": "text",
            "id": "sub_heading",
            "label": "Sub heading",
            "default": "Our team personalizes your boxes and picks the best gifts for you"
        },
        {
           "type": "textarea",
            "id": "text1",
            "label": "Text 1",
            "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip"
        },
        {
            "type": "header",
            "content": "Bottom"
        },
        {
            "type": "text",
            "id": "heading2",
            "label": "Heading 2",
            "default": "We donate to adults with autism"
        },
        {
            "type": "textarea",
            "id": "text2",
            "label": "Text 2",
            "default": "Some adults with autism need support to thrive in their independent lives that why 10% of all proceeds go towards x foundation."
        }
    ],
    "presets": [
        {
            "name":"Our team"
        }
    ]
}
{% endschema %}