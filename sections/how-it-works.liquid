{{ 'section-how-it-works.css' | asset_url | stylesheet_tag }}
<div class="hiw-wrapper">
    <div class="hiw-text-content medium-half small-one">
        <div class="hiw-text-content-wrapper">
            <h2 class="h1 hiw-heading">{{ section.settings.heading }}</h2>
            <div class="hiw-text">
                {{ section.settings.text }}
            </div>
        </div>
    </div>
    <div class="hiw-block-content medium-half small-one">
        <div class="hiw-block-content-wrapper">
            {% for block in section.blocks %}
                <div class="hiw-item">
                    <div class="hiw-item-text">
                        <span>{{ block.settings.item_text }}</span>
                    </div>
                    <div class="hiw-item-image">
                        <img src="{{ block.settings.item_image | img_url: 'master' }}" alt="{{ block.settings.item_image.alt | escape }}">
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
<script src="{{ 'how-it-works.js' | asset_url }}" defer="defer"></script>
{% schema %}
{
    "name": "How it works",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "How It Works"
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "Text",
           "default": "<p>Choose your ocassion you need a gift for, and weâ€™ll ship it to either you or your   one.</p><p>Pick from the following ocassions: New Home, Real Estate Gifts, Option 3 or Option 4.</p>"
        }
    ],
    "blocks": [
        {
            "type": "text_and_image",
            "name": "Text and Image",
            "limit": 4,
            "settings": [
                {
                    "type": "text",
                    "id": "item_text",
                    "label": "Text",
                    "default": "Choose your ocassion"
                },
                {
                    "type": "image_picker",
                    "id": "item_image",
                    "label": "Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "How it works",
            "blocks": [
                {
                    "type": "text_and_image"
                }
            ]
        }
    ]
}
{% endschema %}